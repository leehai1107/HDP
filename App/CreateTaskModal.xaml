<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.CreateTaskModal"
             Title="Create New Task"
             BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}">
    <Grid RowDefinitions="*,Auto"
          Padding="20"
          RowSpacing="16">

        <!-- Task Creation Form -->
        <ScrollView Grid.Row="0">
            <StackLayout Spacing="12">
                <Label Text="Task Details"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"/>

                <Label Text="Task Name *"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#333333, Dark=#CCCCCC}"/>
                <Entry Placeholder="Enter task name"
                       Text="{Binding NewTaskName}"
                       PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                       BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"
                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                       x:Name="TaskNameEntry"/>

                <Label Text="Description (optional)"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#333333, Dark=#CCCCCC}"/>
                <Editor Placeholder="Enter task description"
                        Text="{Binding NewTaskDescription}"
                        HeightRequest="100"
                        PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                        BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"
                        TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"/>

                <Label Text="Due Date"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#333333, Dark=#CCCCCC}"/>
                <DatePicker Date="{Binding NewTaskEndDate}"
                            BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"
                            TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"/>

                <Label Text="Attachment Folder (optional)"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#333333, Dark:#CCCCCC}"/>
                <Grid ColumnDefinitions="*,Auto"
                      ColumnSpacing="8">
                    <Label Grid.Column="0"
                           Text="{Binding NewTaskAttachmentPath}"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light:#666666, Dark=#AAAAAA}"
                           LineBreakMode="TailTruncation"
                           VerticalTextAlignment="Center"
                           Padding="12,8"
                           BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"/>
                    <Button Grid.Column="1"
                            Text="ðŸ“ Browse"
                            Clicked="OnBrowseFolderClicked"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            Padding="12,8"
                            FontSize="12"/>
                </Grid>
            </StackLayout>
        </ScrollView>

        <!-- Action Buttons -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,*"
              ColumnSpacing="12">
            <Button Grid.Column="0"
                    Text="âŒ Cancel"
                    Clicked="OnCancelClicked"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    Padding="12,12"
                    FontAttributes="Bold"/>
            <Button Grid.Column="1"
                    Text="âœ… Create Task"
                    Clicked="OnCreateTaskClickedModal"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Padding="12,12"
                    FontAttributes="Bold"/>
        </Grid>
    </Grid>
</ContentPage>
