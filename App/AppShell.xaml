<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:App"
    Title="File Explorer">

    <TabBar>
        <ShellContent
            Title="File Explorer"
            Icon="folder.png"
            ContentTemplate="{DataTemplate local:FileExplorerPage}"
            Route="FileExplorer"/>

        <ShellContent
            Title="Tasks"
            Icon="checklist.png"
            ContentTemplate="{DataTemplate local:TasksPage}"
            Route="Tasks"/>
    </TabBar>

</Shell>
